<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.formulari.HelloControllerA3">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fitWidth="250" preserveRatio="true" fx:id="logo" >
        <image>
            <Image url="https://arc-anglerfish-arc2-prod-infobae.s3.amazonaws.com/public/V5HQKP73CRDPPI4XEUFPGGGFYA"/>
        </image>
    </ImageView>
    <HBox>
        <TextField fx:id="url"/>
    </HBox>
    <HBox>
        <Button id="canviarFoto" text="REFRESH" onAction="#refresh" styleClass="btn-info"/>
    </HBox>
</VBox>
